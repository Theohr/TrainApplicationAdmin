@model WebApp.Models.ROUTE

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_ResPagesLayout.cshtml";
}
<style>
    /*where the css part of the page is */
    a { /*all the labels will have the following styling */
        color: black;
        background-color: transparent;
        text-decoration: none;
    }


        a:hover { /* styling when they are hovered*/
            color: red;
            background-color: transparent;
            text-decoration: underline;
        }

        a:active { /* styling when they weren't clicked before */
            color: yellow;
            background-color: transparent;
            text-decoration: underline;
        }
</style>
<body>
    <!--Delete page title-->
    <h2><i class="fas fa-trash-alt"></i> Delete Route</h2>

    <!--make sure the user wants to delete the following route-->
    <h3>Are you sure you want to delete this Route?</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Departure:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.STATION.STATIONNAME)
            </dd>

            <dt>
                First Stop:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.STATION1.STATIONNAME)
            </dd>

            <dt>
                Destination:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.STATION2.STATIONNAME)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            <!--security feature-->
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" /><!--delete button-->
                <p style="
                  text-align:center;
                  background-color:#DCDCDC;
                  padding: 10px;
                  margin-left: 10px;
                  margin-top: 10px;
                  margin:10px;
                  height:auto;
                  width: auto;
                  border-radius: 0.2em; overflow: hidden;
                  position: relative;
                  box-shadow: 0px 1.5px 5px rgba(0,0,0,0.35)">
                    <i class="fas fa-arrow-left"></i> @Html.ActionLink("Back to List", "Index") <!--back to list button-->
                </p>
            </div>
        }
    </div>
</body>