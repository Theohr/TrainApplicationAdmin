@model WebApp.Models.TRAIN

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_ResPagesLayout.cshtml";
}
<style>
    /*where the css part of the page is */
    a { /*all the labels will have the following styling */
        color: black;
        background-color: transparent;
        text-decoration: none;
    }


        a:hover { /* styling when they are hovered*/
            color: red;
            background-color: transparent;
            text-decoration: underline;
        }

        a:active { /* styling when they weren't clicked before */
            color: yellow;
            background-color: transparent;
            text-decoration: underline;
        }
</style>
<body>
    <!--Title of the page-->
    <h2><i class="fas fa-user-plus"></i> Create Train</h2>


    @using (Html.BeginForm())
    {
        <!--security feature-->
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.TRAINID, htmlAttributes: new { @class = "control-label col-md-2" }) <!--train id label-->
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TRAINID, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } }) <!--train id value-->
                    @Html.ValidationMessageFor(model => model.TRAINID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.COACH_FIRST, htmlAttributes: new { @class = "control-label col-md-2" }) <!--coach first label-->
                <div class="col-md-10">
                    @Html.EditorFor(model => model.COACH_FIRST, new { htmlAttributes = new { @class = "form-control" } }) <!--coach first value-->
                    @Html.ValidationMessageFor(model => model.COACH_FIRST, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.COACH_STANDARD, htmlAttributes: new { @class = "control-label col-md-2" }) <!--coach standard label-->
                <div class="col-md-10">
                    @Html.EditorFor(model => model.COACH_STANDARD, new { htmlAttributes = new { @class = "form-control" } }) <!--coach standard value-->
                    @Html.ValidationMessageFor(model => model.COACH_STANDARD, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.STATUS, htmlAttributes: new { @class = "control-label col-md-2" }) <!--status label-->
                <div class="col-md-10">
                    @Html.EditorFor(model => model.STATUS, new { htmlAttributes = new { @class = "form-control" } }) <!--status value-->
                    @Html.ValidationMessageFor(model => model.STATUS, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.TOTALSEATS, htmlAttributes: new { @class = "control-label col-md-2" }) <!--total seats label-->
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TOTALSEATS, new { htmlAttributes = new { @class = "form-control" } }) <!--total seats value-->
                    @Html.ValidationMessageFor(model => model.TOTALSEATS, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" /> <!--create button-->
                </div>
                <div style="
                  text-align:center;
                  background-color:#DCDCDC;
                  padding: 10px;
                  float:left;
                  margin-left: 10px;
                  margin-top: 10px;
                  margin:10px;
                  height:auto;
                  width: auto;
                  border-radius: 0.2em; overflow: hidden;
                  position: relative;
                  box-shadow: 0px 1.5px 5px rgba(0,0,0,0.35)">
                    <i class="fas fa-backward"></i> @Html.ActionLink("Back to List", "Index") <!--back to list button-->
                </div>
            </div>
        </div>
    }
</body>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
