<style>
    /*where the css part of the page is */
    a { /*all the labels will have the following styling */
        color: black;
        background-color: transparent;
        text-decoration: none;
    }


        a:hover { /* styling when they are hovered*/
            color: red;
            background-color: transparent;
            text-decoration: underline;
        }

        a:active { /* styling when they weren't clicked before */
            color: yellow;
            background-color: transparent;
            text-decoration: underline;
        }
</style>
<body>
    <!--The title of the page with a user icon-->
    <h2><i class="fas fa-edit"></i> Edit Ticket</h2>

    <!--Creating a form with the user details-->
    @using (Html.BeginForm())
    {
        <!--the AntiForgeryToken for security-->
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" }) <!--summarize error messages in a specific place-->
        @Html.HiddenFor(model => model.TICKETID) <!-- Train ID is unique so it can't be changed-->

        <div class="form-group">
            @Html.LabelFor(model => model.TRANSACTIONID, "TRANSACTIONID", htmlAttributes: new { @class = "control-label col-md-2" }) <!--The transaction id first label-->
            <div class="col-md-10">
                @Html.DropDownList("TRANSACTIONID", null, htmlAttributes: new { @class = "form-control" })  <!--The value of transaction id first-->
                @Html.ValidationMessageFor(model => model.TRANSACTIONID, "", new { @class = "text-danger" }) <!--Displaying an error in the context if exists-->
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.JOURNEYID, "JOURNEYID", htmlAttributes: new { @class = "control-label col-md-2" }) <!--The journey id label-->
            <div class="col-md-10">
                @Html.DropDownList("JOURNEYID", null, htmlAttributes: new { @class = "form-control" })  <!--The value of journey id-->
                @Html.ValidationMessageFor(model => model.JOURNEYID, "", new { @class = "text-danger" }) <!--Displaying an error in the context if exists-->
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PRICE, htmlAttributes: new { @class = "control-label col-md-2" }) <!--The price label-->
            <div class="col-md-10">
                @Html.EditorFor(model => model.PRICE, new { htmlAttributes = new { @class = "form-control" } })  <!--The value of price-->
                @Html.ValidationMessageFor(model => model.PRICE, "", new { @class = "text-danger" }) <!--Displaying an error in the context if exists-->
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SEATRESERVATION, htmlAttributes: new { @class = "control-label col-md-2" }) <!--The seatreservation label-->
            <div class="col-md-10">
                @Html.EditorFor(model => model.SEATRESERVATION, new { htmlAttributes = new { @class = "form-control" } })  <!--The value of seat reservation-->
                @Html.ValidationMessageFor(model => model.SEATRESERVATION, "", new { @class = "text-danger" }) <!--Displaying an error in the context if exists-->
            </div>
        </div>

        <!--Container with the Save and Back to list button-->
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" /> <!--Save button-->
            </div>
            <div style="
                  text-align:center;
                  background-color:#DCDCDC;
                  padding: 10px;
                  float:left;
                  margin-left: 10px;
                  margin-top: 10px;
                  margin:10px;
                  height:auto;
                  width: auto;
                  border-radius: 0.2em; overflow: hidden;
                  position: relative;
                  box-shadow: 0px 1.5px 5px rgba(0,0,0,0.35)">
                <i class="fas fa-arrow-left"></i> @Html.ActionLink("Back to List", "Index") <!--Button to go back to list-->
            </div>
        </div>
    </div>
    }
</body>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
