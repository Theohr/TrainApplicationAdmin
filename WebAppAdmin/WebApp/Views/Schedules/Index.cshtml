@model IEnumerable<WebApp.Models.SCHEDULE>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_ResPagesLayout.cshtml"; // the layout of the page
}

<style>
    /*where the css part of the page is */
    a { /*all the labels will have the following styling */
        color: black;
        background-color: transparent;
        text-decoration: none;
    }


        a:hover { /* styling when they are hovered*/
            color: red;
            background-color: transparent;
            text-decoration: underline;
        }

        a:active { /* styling when they weren't clicked before */
            color: yellow;
            background-color: transparent;
            text-decoration: underline;
        }
</style>
<body>
    <!--The title of the page with a user icon-->
    <h2><i class="fas fa-calendar-alt"></i> Schedules</h2>

    <!--The search bar searching for Journey ID of the journey on the list on button click-->
    <p>
        @using (@Html.BeginForm("Index", "Schedules", FormMethod.Get))
        {
            <b>Search By:</b>
            @Html.RadioButton("searchBy", "ROUTEID", true) <text>Route ID</text>
            @Html.TextBox("Search") <input type="submit" value="Search">
        }
    </p>

    <!--Create new user button which leads to the Create view of the journey with the appropriate design-->
    <a>
        <p style="
                  text-align:center;
                  background-color:#DCDCDC;
                  padding: 10px;
                  float:left;
                  margin-bottom:20px;
                  margin:10px;
                  width: auto;
                  height: auto;
                  border-radius: 0.2em; overflow: hidden;
                  position: relative;
                  box-shadow: 0px 1.5px 5px rgba(0,0,0,0.35)">
            <i class="fas fa-plus"></i> @Html.ActionLink("Create New", "Create")
        </p>
    </a>

    <!--Table where fields of the user are shown-->
    <table class="table">
        <tr>
            <th>
                Train ID <!--Train ID-->
            </th>
            <th>
                Route ID <!--Route ID-->
            </th>
            <th>
                Departure Time <!--Departure Time-->
            </th>
            <th>
                Arrival Time <!--Arrival Time-->
            </th>
            <th>
                Train Status <!--Train Status-->
            </th>
            <th></th>
        </tr>

        <!--For each field in the table for the user then the specific data are passed into the table-->
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TRAIN.TRAINID) <!--Train id will be displayed under the  train id field-->
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ROUTE.ROUTEID) <!--route id will be displayed under the  route id field-->
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DEPARTURETIME) <!--departure time id will be displayed under the  departure time field-->
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ARRIVALTIME) <!--Arrival time  will be displayed under the  arrival time id field-->
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TRAIN.STATUS) <!--train status  will be displayed under the  train status id field-->
                </td>
                <!--Edit, Details, Delete buttons at the end of the user details redirecting to their representative page-->
                <td>
                    <i class="fas fa-edit"></i> @Html.ActionLink("Edit", "Edit", new { id = item.ROUTEID, idsch = item.TRAINID }) |
                    <i class="fas fa-info-circle"></i> @Html.ActionLink("Details", "Details", new { id = item.ROUTEID, idsch = item.TRAINID }) |
                    <i class="fas fa-trash-alt"></i> @Html.ActionLink("Delete", "Delete", new { id = item.ROUTEID, idsch = item.TRAINID })
                </td>
            </tr>
        }

    </table>
</body>
