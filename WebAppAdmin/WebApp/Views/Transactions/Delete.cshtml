@model WebApp.Models.TRANSACTION

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_ResPagesLayout.cshtml";
}

<style>
    /*where the css part of the page is */
    a { /*all the labels will have the following styling */
        color: black;
        background-color: transparent;
        text-decoration: none;
    }


        a:hover { /* styling when they are hovered*/
            color: red;
            background-color: transparent;
            text-decoration: underline;
        }

        a:active { /* styling when they weren't clicked before */
            color: yellow;
            background-color: transparent;
            text-decoration: underline;
        }
</style>
<body>
    <!--Delete page title-->
    <h2>Delete Transaction</h2>

    <!--make sure user wants to delete the transaction displayed bellow-->
    <h3>Are you sure you want to delete this Transaction?</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Price:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PRICE)
            </dd>

            <dt>
                Date of Purchase:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DATEOFPURCHASE)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            <!--security anti forgety token-->
            @Html.AntiForgeryToken()

            <!--back to list button-->
            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" />
                <p style="
                  text-align:center;
                  background-color:#DCDCDC;
                  padding: 10px;
                  margin-left: 10px;
                  margin-top: 10px;
                  margin:10px;
                  height:auto;
                  width: auto;
                  border-radius: 0.2em; overflow: hidden;
                  position: relative;
                  box-shadow: 0px 1.5px 5px rgba(0,0,0,0.35)">
                    <i class="fas fa-arrow-left"></i> @Html.ActionLink("Back to List", "Index")
                </p>
            </div>
        }
    </div>
</body>
