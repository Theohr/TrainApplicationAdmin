@model WebApp.Models.TRANSACTION

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_ResPagesLayout.cshtml";
}
<style>
    /*where the css part of the page is */
    a { /*all the labels will have the following styling */
        color: black;
        background-color: transparent;
        text-decoration: none;
    }


        a:hover { /* styling when they are hovered*/
            color: red;
            background-color: transparent;
            text-decoration: underline;
        }

        a:active { /* styling when they weren't clicked before */
            color: yellow;
            background-color: transparent;
            text-decoration: underline;
        }
</style>
<body>
    <!--The title of the page with a user icon-->
    <h2><i class="fas fa-info-circle"></i> Transaction Details</h2>

    <!--labels for each attribute and the value of the representative attribute-->
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Transaction ID:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TRANSACTIONID)
            </dd>
            <dt>
                User ID:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.USERID)
            <dt>
                Price:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PRICE)
            </dd>

            <dt>
                Date of Purchase:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DATEOFPURCHASE)
            </dd>

        </dl>
        <!--the edit button to rerirect to the edit page and the back to the list button-->
        <div class="form-group">
            <p style="
                  text-align:center;
                  background-color:#DCDCDC;
                  padding: 10px;
                  margin-left: 10px;
                  margin-top: 10px;
                  margin:10px;
                  height:auto;
                  width: auto;
                  border-radius: 0.2em; overflow: hidden;
                  position: relative;
                  box-shadow: 0px 1.5px 5px rgba(0,0,0,0.35)">
                <i class="fas fa-edit"></i> @Html.ActionLink("Edit", "Edit", new { id = Model.TRANSACTIONID })
            </p>
            <p style="
                  text-align:center;
                  background-color:#DCDCDC;
                  padding: 10px;
                  margin-left: 10px;
                  margin-top: 10px;
                  margin:10px;
                  height:auto;
                  width: auto;
                  border-radius: 0.2em; overflow: hidden;
                  position: relative;
                  box-shadow: 0px 1.5px 5px rgba(0,0,0,0.35)">
                <i class="fas fa-arrow-left"></i> @Html.ActionLink("Back to List", "Index")
            </p>
        </div>
    </div>
</body>
