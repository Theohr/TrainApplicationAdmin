@model WebApp.Models.TRANSACTION

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_ResPagesLayout.cshtml";
}

<style>
    a {
        color: black;
        background-color: transparent;
        text-decoration: none;
    }


        a:hover {
            color: red;
            background-color: transparent;
            text-decoration: underline;
        }

        a:active {
            color: yellow;
            background-color: transparent;
            text-decoration: underline;
        }
</style>
<body>
    <h2>Delete Transaction</h2>

    <h3>Are you sure you want to delete this Transaction?</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Price:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PRICE)
            </dd>

            <dt>
                Date of Purchase:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DATEOFPURCHASE)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" />
            <p style="
                  text-align:center;
                  background-color:#DCDCDC;
                  padding: 10px;
                  margin-left: 10px;
                  margin-top: 10px;
                  margin:10px;
                  height:auto;
                  width: auto;
                  border-radius: 0.2em; overflow: hidden;
                  position: relative;
                  box-shadow: 0px 1.5px 5px rgba(0,0,0,0.35)">
                <i class="fas fa-arrow-left"></i> @Html.ActionLink("Back to List", "Index")
            </p>
        </div>
        }
    </div>
    </body>
