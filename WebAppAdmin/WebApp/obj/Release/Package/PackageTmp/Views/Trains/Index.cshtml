@model IEnumerable<WebApp.Models.TRAIN>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_ResPagesLayout.cshtml"; // the layout of the page
}

<style>
    /*where the css part of the page is */
    a { /*all the labels will have the following styling */
        color: black;
        background-color: transparent;
        text-decoration: none;
    }


        a:hover { /* styling when they are hovered*/
            color: red;
            background-color: transparent;
            text-decoration: underline;
        }

        a:active { /* styling when they weren't clicked before */
            color: yellow;
            background-color: transparent;
            text-decoration: underline;
        }
</style>
<body>
    <!--The title of the page with a user icon-->
    <h2><i class="fas fa-train"></i> Trains</h2>

    <!--The search bar searching for Train ID of the train on the list on button click-->
    <p style="margin-top:20px">
        @using (@Html.BeginForm("Index", "Trains", FormMethod.Get))
        {
            <b><i class="fas fa-search"></i> Search By:</b>
            @Html.RadioButton("searchBy", "TrainID", true) <text>Train ID</text>
            @Html.TextBox("Search") <input type="submit" value="search">
        }
    </p>

    <!--Create new user button which leads to the Create view of the train with the appropriate design-->
    <a>
        <p style="
                  text-align:center;
                  background-color:#DCDCDC;
                  padding: 10px;
                  float:left;
                  margin-bottom:20px;
                  margin:10px;
                  width: auto;
                  height: auto;
                  border-radius: 0.2em; overflow: hidden;
                  position: relative;
                  box-shadow: 0px 1.5px 5px rgba(0,0,0,0.35)">
            <i class="fas fa-plus"></i> @Html.ActionLink("Create New", "Create")
        </p>
    </a>

    <!--Table where fields of the user are shown-->
    <table class="table">
        <tr>
            <th>
                Coach First <!--Coach first-->
            </th>
            <th>
                Coach Standard <!--Coach standard-->
            </th>
            <th>
                Train Status <!--Train Status-->
            </th>
            <th>
                Total Seats <!--Total seats-->
            </th>
            <th></th>
        </tr>

        <!--For each field in the table for the user then the specific data are passed into the table-->
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.COACH_FIRST) <!--Train's First coaches will be displayed under the coach first field-->
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.COACH_STANDARD) <!--Train's First standard will be displayed under the coach standard field-->
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.STATUS) <!--Train's status coaches will be displayed under the status field-->
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TOTALSEATS) <!--Train's total seats  will be displayed under the total seats field-->
            </td>
            <!--Edit, Details, Delete buttons at the end of the user details redirecting to their representative page-->
            <td>
                <i class="fas fa-edit"></i> @Html.ActionLink("Edit", "Edit", new { id = item.TRAINID }) |
                <i class="fas fa-info-circle"></i> @Html.ActionLink("Details", "Details", new { id = item.TRAINID }) |
                <i class="fas fa-user-minus"></i> @Html.ActionLink("Delete", "Delete", new { id = item.TRAINID })
            </td>
        </tr>
        }

    </table>
</body>