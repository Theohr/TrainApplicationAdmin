@model WebApp.Models.TRAIN

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_ResPagesLayout.cshtml";
}
<style>
    a {
        color: black;
        background-color: transparent;
        text-decoration: none;
    }


        a:hover {
            color: red;
            background-color: transparent;
            text-decoration: underline;
        }

        a:active {
            color: yellow;
            background-color: transparent;
            text-decoration: underline;
        }
</style>
<body>
    <h2><i class="fas fa-trash-alt"></i> Delete Train</h2>

    <h3>Are you sure you want to delete this Train?</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Coach First:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.COACH_FIRST)
            </dd>

            <dt>
                Coach Standard:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.COACH_STANDARD)
            </dd>

            <dt>
                Status:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.STATUS)
            </dd>

            <dt>
                Total Seats:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TOTALSEATS)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" />
                <p style="
                      text-align:center;
                      background-color:#DCDCDC;
                      padding: 10px;
                      margin-left: 10px;
                      margin-top: 10px;
                      margin:10px;
                      height:auto;
                      width: auto;
                      border-radius: 0.2em; overflow: hidden;
                      position: relative;
                      box-shadow: 0px 1.5px 5px rgba(0,0,0,0.35)">
                    <i class="fas fa-arrow-left"></i> @Html.ActionLink("Back to List", "Index")
                </p>
            </div>
        }
    </div>
    </body>