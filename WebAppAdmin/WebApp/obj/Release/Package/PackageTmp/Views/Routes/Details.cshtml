@model WebApp.Models.ROUTE

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_ResPagesLayout.cshtml";
}
<style>
    a {
        color: black;
        background-color: transparent;
        text-decoration: none;
    }


        a:hover {
            color: red;
            background-color: transparent;
            text-decoration: underline;
        }

        a:active {
            color: yellow;
            background-color: transparent;
            text-decoration: underline;
        }
</style>
<body>
    <h2><i class="fas fa-info-circle"></i>Route Details</h2>

    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Route ID:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ROUTEID)
            </dd>
            <dt>
                Departure:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.STATION.STATIONNAME)
            </dd>

            <dt>
                First Stop:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.STATION1.STATIONNAME)
            </dd>

            <dt>
                Destination:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.STATION2.STATIONNAME)
            </dd>

        </dl>
        <div class="form-group">
            <p style="
                  text-align:center;
                  background-color:#DCDCDC;
                  padding: 10px;
                  margin-left: 10px;
                  margin-top: 10px;
                  margin:10px;
                  height:auto;
                  width: auto;
                  border-radius: 0.2em; overflow: hidden;
                  position: relative;
                  box-shadow: 0px 1.5px 5px rgba(0,0,0,0.35)">
                <i class="fas fa-edit"></i> @Html.ActionLink("Edit", "Edit", new { id = Model.ROUTEID })
            </p>
            <p style="
                  text-align:center;
                  background-color:#DCDCDC;
                  padding: 10px;
                  margin-left: 10px;
                  margin-top: 10px;
                  margin:10px;
                  height:auto;
                  width: auto;
                  border-radius: 0.2em; overflow: hidden;
                  position: relative;
                  box-shadow: 0px 1.5px 5px rgba(0,0,0,0.35)">
                <i class="fas fa-arrow-left"></i> @Html.ActionLink("Back to List", "Index")
            </p>
        </div>
    </div>
</body>
